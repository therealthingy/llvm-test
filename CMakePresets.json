{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "llvm21",
            "displayName": "LLVM-21 + Ninja + Scan",
            "binaryDir": "${sourceDir}/build-llvm21/",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "llvm19",
            "displayName": "LLVM-19 + Ninja + Scan",
            "binaryDir": "${sourceDir}/build-llvm19/",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/Cellar/llvm@19/19.1.7/bin/clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "llvm21",
            "displayName": "LLVM-21 + Ninja + Scan",
            "configurePreset": "llvm21"
        },
        {
            "name": "llvm19",
            "displayName": "LLVM-19 + Ninja + Scan",
            "configurePreset": "llvm19"
        }
    ],
    "workflowPresets": [
        {
            "name": "llvm21",
            "description": "LLVM-21 + Ninja + Scan",
            "steps": [
                {
                    "type": "configure",
                    "name": "llvm21"
                },
                {
                    "type": "build",
                    "name": "llvm21"
                }
            ]
        },
        {
            "name": "llvm19",
            "description": "LLVM-19 + Ninja + Scan",
            "steps": [
                {
                    "type": "configure",
                    "name": "llvm19"
                },
                {
                    "type": "build",
                    "name": "llvm19"
                }
            ]
        }
    ]
}
